{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "nodenext",
        "incremental": true,
        "sourceMap": true,
        // "esModuleInterop": true,

        "strict": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,

        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "../dist",
    },
    "include": ["./**/*.ts"],
}
